<div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm hover:shadow-md transition-all cursor-pointer group flex items-center justify-between">
    <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white transition-colors">
            <i class="bi bi-key-fill text-xl"></i>
        </div>
        <div>
            <h4 class="font-bold text-gray-800">@Title</h4>
            <p class="text-xs text-gray-400">Créé le @DateCreation.ToShortDateString()</p>
        </div>
    </div>
    <div class="opacity-0 group-hover:opacity-100 transition-opacity flex gap-2">
        <button class="p-2 text-gray-400 hover:text-blue-600 transition-colors" title="Copier le mot de passe">
            <i class="bi bi-clipboard"></i>
        </button>
        <button class="p-2 text-gray-400 hover:text-blue-600 transition-colors" title="Voir les détails">
            <i class="bi bi-eye"></i>
        </button>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Sans titre";
    [Parameter] public DateTime DateCreation { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
}