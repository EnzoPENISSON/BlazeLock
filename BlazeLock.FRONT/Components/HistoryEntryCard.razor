@using BlazeLock.FRONT.Components.Forms
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<div class="relative pl-6">
    <div class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-white border-2 border-blue-500"></div>

    <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 hover:shadow-sm transition-shadow group space-y-3">

        <div class="flex justify-between items-start border-b border-gray-200 pb-2">
            <span class="font-bold text-gray-700 text-sm">Modification</span>
            <span class="text-xs text-gray-400">@Item.DateUpdate.ToLocalTime().ToString("g")</span>
        </div>

        <div class="grid grid-cols-1 gap-3 text-sm">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Titre</label>
                <div class="text-gray-800 font-medium">@Item.Libelle</div>
            </div>

            @if (!string.IsNullOrEmpty(Item.Username))
            {
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Identifiant</label>
                    <div class="text-gray-800 font-mono text-xs bg-white border border-gray-200 px-2 py-1 rounded inline-block">
                        @Item.Username
                    </div>
                </div>
            }

            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Mot de passe</label>
                <div class="relative">
                    <input type="@(_isPasswordVisible ? "text" : "password")"
                           value="@Item.Password"
                           placeholder="••••••••"
                           readonly
                           class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm pr-24 focus:outline-none text-gray-600 font-mono" />

                    <div class="absolute right-2 top-1/2 -translate-y-1/2 flex items-center gap-1">
                        <button type="button" @onclick="CopyToClipboard" title="Copier" class="p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors">
                            <i class="bi bi-clipboard"></i>
                        </button>
                        <button type="button" @onclick="ToggleVisibility" title="Afficher/Masquer" class="p-1.5 text-blue-400 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors">
                            <i class="bi @(_isPasswordVisible ? "bi-eye-slash-fill" : "bi-eye-fill")"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Item.Url))
            {
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">URL</label>
                    <a href="@Item.Url" target="_blank" class="text-blue-600 hover:underline truncate block text-xs">@Item.Url</a>
                </div>
            }
            @if (!string.IsNullOrEmpty(Item.Commentaire))
            {
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Commentaire</label>
                    <p class="text-gray-600 text-xs italic bg-white p-2 rounded border border-gray-100">@Item.Commentaire</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public EntryFormModel Item { get; set; } = new();

    private bool _isPasswordVisible = false;

    private void ToggleVisibility() => _isPasswordVisible = !_isPasswordVisible;

    private async Task CopyToClipboard()
    {
        if (!string.IsNullOrEmpty(Item.Password))
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", Item.Password);
        }
    }
}