@using BlazeLock.DbLib

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 sm:p-6" style="z-index: 100;">

        @* Backdrop *@
        <div class="absolute inset-0 bg-gray-900/50 backdrop-blur-sm transition-opacity"
             @onclick="OnClose"></div>

        @* Modal Content *@
        <div class="relative w-full max-w-lg transform rounded-2xl bg-white p-6 text-left shadow-xl transition-all sm:my-8">

            <div class="mb-5">
                <h3 class="text-xl font-bold text-gray-900">
                    Déplacer l'entrée
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                    Sélectionnez le nouveau dossier pour cet élément.
                </p>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="mb-4 rounded-lg bg-red-50 p-4 text-sm text-red-600 border border-red-100 flex items-center">
                    <i class="bi bi-exclamation-circle-fill mr-2"></i> @ErrorMessage
                </div>
            }

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Destination</label>

                    <div class="relative">
                        <select @bind="_selectedFolderId"
                                class="w-full appearance-none rounded-xl border border-gray-300 bg-white py-3 pl-4 pr-10 text-gray-700 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-100 transition-all">

                            <option value="@DefaultFolderId" disabled selected style="display:none">
                                Select a destination...
                            </option>

                            @if (Folders != null)
                            {
                                @foreach (var folder in Folders)
                                {
                                    @* 2. Remove the default folder from the selectable list *@
                                    @if (folder.IdDossier != DefaultFolderId)
                                    {
                                        <option value="@folder.IdDossier">📁 @folder.Libelle</option>
                                    }
                                }
                            }
                        </select>

                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                            <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-3">
                <button type="button"
                        class="rounded-xl border border-gray-300 bg-white px-5 py-2.5 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none disabled:opacity-50"
                        @onclick="OnClose"
                        disabled="@IsProcessing">
                    Annuler
                </button>

                <button type="button"
                        class="inline-flex items-center justify-center rounded-xl bg-blue-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-70 disabled:cursor-not-allowed min-w-[100px]"
                        @onclick="HandleSubmit"
                        disabled="@IsProcessing">

                    @if (IsProcessing)
                    {
                        <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    }
                    else
                    {
                        <i class="bi bi-folder-symlink mr-2"></i>
                    }
                    Déplacer
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public List<DossierDto> Folders { get; set; } = new();
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public string ErrorMessage { get; set; }
    [Parameter] public Guid EntreeId { get; set; }
    [Parameter] public Guid DefaultFolderId { get; set; }

    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<(Guid FolderId, Guid EntreeId)> OnSubmit { get; set; }

    private Guid _selectedFolderId = Guid.Empty;

    protected override void OnInitialized()
    {
        if (_selectedFolderId == Guid.Empty)
        {
            _selectedFolderId = DefaultFolderId;
        }
    }

    protected override void OnParametersSet()
    {
        if (!IsVisible)
        {
            _selectedFolderId = Guid.Empty;
        }
    }

    private async Task HandleSubmit()
    {
        if (OnSubmit.HasDelegate)
        {
            await OnSubmit.InvokeAsync((_selectedFolderId, EntreeId));
        }
    }
}