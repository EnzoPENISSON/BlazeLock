                                <input readonly value="@ViewModel.DecryptedLogin" class="flex-1 bg-gray-50 border border-gray-200 rounded-lg px-3 py-2 text-gray-700" />
                                <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Copier">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">Mot de passe</label>
                            <div class="flex gap-2">
                                <div class="flex-1 relative">
                                    <input readonly
                                           type="@(ViewModel.IsPasswordVisible ? "text" : "password")"
                                           value="@ViewModel.DecryptedPassword"
                                           class="w-full bg-gray-50 border border-gray-200 rounded-lg px-3 py-2 text-gray-700 font-mono" />
                                </div>
                                <button @onclick="ViewModel.TogglePasswordVisibility" class="p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors">
