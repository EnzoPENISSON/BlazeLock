                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(ViewModel.DecryptedUrl))
                        {
                            <div>
                                <label class="block text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">Site Web</label>
                                <a href="@ViewModel.DecryptedUrl" target="_blank" class="text-blue-600 hover:underline flex items-center gap-2">
