@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    // Parent calls this to open the modal with specific data
    public async Task OpenAsync(Guid idEntree, Guid idCoffre)
    {
        IsOpen = true;
        await ViewModel.LoadEntryAsync(idEntree, idCoffre);
        StateHasChanged();
    }

    private async Task Close()
    {
        IsOpen = false;
        await OnClose.InvokeAsync();
    }
} *@