@using BlazeLock.DbLib
@using BlazeLock.FRONT.ViewModels
@using BlazeLock.FRONT.Components.Forms
@using BlazeLock.FRONT.Components.Layouts
@using Microsoft.AspNetCore.Components.Forms

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-lg overflow-hidden animate-fade-in-up">
            <div class="px-8 py-6 border-b border-gray-100 flex justify-between items-center">
                <h3 class="text-xl font-bold text-gray-800">Modifier l'Entrée</h3>
                <button @onclick="OnClose" class="text-gray-400 hover:text-gray-600">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <EditForm Model="@FormModel" OnValidSubmit="OnSubmit">
                <DataAnnotationsValidator />

                <div class="p-8 space-y-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">Titre</label>
                        <InputText @bind-Value="FormModel.Libelle" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-100 outline-none" placeholder="Ex: Netflix" />
                        <ValidationMessage For="@(() => FormModel.Libelle)" class="text-red-500 text-xs" />
                    </div>

                    <div class="p-4 bg-blue-50 rounded-xl border border-blue-100 space-y-3">
                        <div>
                            <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Identifiant / Email</label>
                            <InputText @bind-Value="FormModel.Username" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm" />
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Mot de passe (Requis)</label>
                            <div class="relative">
                                <InputText type="@_passwordFieldType" @bind-Value="FormModel.Password" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm" />
                                <button type="button" @onclick="TogglePasswordVisibility" class="absolute right-3 top-1/2 -translate-y-1/2 text-blue-400 hover:text-blue-600">
                                    <i class="bi @(_passwordFieldType == "password" ? "bi-eye-fill" : "bi-eye-slash-fill")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => FormModel.Password)" class="text-red-500 text-xs" />
                            <PasswordGenerator OnPasswordGenerated="HandlePasswordGenerated" />
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">URL (Optionnel)</label>
                            <InputText @bind-Value="FormModel.Url" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm" placeholder="https://..." />
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Commentaire (Optionnel)</label>
                            <InputTextArea @bind-Value="FormModel.Commentaire" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm" placeholder="" />
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="text-red-500 text-sm bg-red-50 p-3 rounded-lg">@ErrorMessage</div>
                    }
                </div>

                <div class="px-8 py-6 bg-gray-50 flex justify-end gap-3">
                    <button type="button" @onclick="OnClose" class="px-6 py-2.5 rounded-xl font-semibold text-gray-600 hover:bg-gray-200">
                        Annuler
                    </button>
                    <button type="submit" disabled="@IsProcessing" class="px-6 py-2.5 rounded-xl font-bold text-white bg-blue-600 hover:bg-blue-700 shadow-lg disabled:opacity-50 flex items-center">
                        @if (IsProcessing)
                        {
                            <span class="w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></span>
                            <span>Chiffrement...</span>
                        }
                        else
                        {
                            <span>Enregistrer</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EntryFormModel FormModel { get; set; } = new();
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public string ErrorMessage { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }

    private string _passwordFieldType = "password";

    private void TogglePasswordVisibility()
    {
        _passwordFieldType = _passwordFieldType == "password" ? "text" : "password";
    }

    private void HandlePasswordGenerated(string newPassword)
    {
        FormModel.Password = newPassword;
        StateHasChanged();
    }
}