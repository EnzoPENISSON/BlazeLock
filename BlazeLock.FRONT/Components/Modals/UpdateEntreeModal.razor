@using BlazeLock.DbLib
@using BlazeLock.FRONT.ViewModels
@using BlazeLock.FRONT.Components.Forms
@using BlazeLock.FRONT.Components.Layouts
@using Microsoft.AspNetCore.Components.Forms

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-lg overflow-hidden animate-fade-in-up flex flex-col max-h-[90vh]">

            <div class="px-8 pt-6 pb-0 border-b border-gray-100 bg-white sticky top-0 z-10">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xl font-bold text-gray-800">Détails de l'Entrée</h3>
                    <button @onclick="OnClose" class="text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <div class="flex gap-6">
                    <button @onclick='() => _activeTab = "edit"'
                            class="pb-3 text-sm font-bold border-b-2 transition-all @(_activeTab == "edit" ? "text-blue-600 border-blue-600" : "text-gray-400 border-transparent hover:text-gray-600")">
                        <i class="bi bi-pencil-square mr-2"></i>Modification
                    </button>
                    <button @onclick='() => _activeTab = "history"'
                            class="pb-3 text-sm font-bold border-b-2 transition-all @(_activeTab == "history" ? "text-blue-600 border-blue-600" : "text-gray-400 border-transparent hover:text-gray-600")">
                        <i class="bi bi-clock-history mr-2"></i>Historique
                    </button>
                </div>
            </div>

            <div class="overflow-y-auto flex-1 p-8">

                @if (_activeTab == "edit")
                {
                    <EditForm Model="@FormModel" OnValidSubmit="OnSubmit">
                        <DataAnnotationsValidator />

                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-bold text-gray-700 mb-2">Titre</label>
                                <InputText @bind-Value="FormModel.Libelle" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-100 outline-none transition-all" placeholder="Ex: Netflix" />
                                <ValidationMessage For="@(() => FormModel.Libelle)" class="text-red-500 text-xs" />
                            </div>

                            <div class="p-4 bg-blue-50 rounded-xl border border-blue-100 space-y-3">
                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Identifiant / Email</label>
                                    <InputText @bind-Value="FormModel.Username" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm focus:ring-2 focus:ring-blue-100 outline-none" />
                                </div>

                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Mot de passe (Requis)</label>
                                    <div class="relative">
                                        <InputText type="@_passwordFieldType" @bind-Value="FormModel.Password" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm pr-10 focus:ring-2 focus:ring-blue-100 outline-none" />
                                        <button type="button" @onclick="TogglePasswordVisibility" class="absolute right-3 top-1/2 -translate-y-1/2 text-blue-400 hover:text-blue-600">
                                            <i class="bi @(_passwordFieldType == "password" ? "bi-eye-fill" : "bi-eye-slash-fill")"></i>
                                        </button>
                                    </div>
                                    <ValidationMessage For="@(() => FormModel.Password)" class="text-red-500 text-xs" />
                                    <PasswordGenerator OnPasswordGenerated="HandlePasswordGenerated" />
                                </div>

                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">URL</label>
                                    <InputText @bind-Value="FormModel.Url" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm focus:ring-2 focus:ring-blue-100 outline-none" placeholder="https://..." />
                                </div>

                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Commentaire</label>
                                    <InputTextArea @bind-Value="FormModel.Commentaire" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm focus:ring-2 focus:ring-blue-100 outline-none" rows="2" />
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(ErrorMessage))
                            {
                                <div class="text-red-500 text-sm bg-red-50 p-3 rounded-lg flex items-center gap-2">
                                    <i class="bi bi-exclamation-circle-fill"></i> @ErrorMessage
                                </div>
                            }
                        </div>

                        <div class="mt-8 flex justify-end gap-3">
                            <button type="button" @onclick="OnClose" class="px-6 py-2.5 rounded-xl font-semibold text-gray-600 hover:bg-gray-200 transition-colors">
                                Annuler
                            </button>
                            <button type="submit" disabled="@IsProcessing" class="px-6 py-2.5 rounded-xl font-bold text-white bg-blue-600 hover:bg-blue-700 shadow-lg disabled:opacity-50 flex items-center transition-all">
                                @if (IsProcessing)
                                {
                                    <span class="w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></span>
                                    <span>Sauvegarde...</span>
                                }
                                else
                                {
                                    <span>Enregistrer</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                }

                @if (_activeTab == "history")
                {
                    <div class="space-y-4">
                        @if (HistoryList == null || !HistoryList.Any())
                        {
                            <div class="text-center py-10 text-gray-400">
                                <i class="bi bi-clock-history text-4xl mb-2 block"></i>
                                <p class="text-sm">Aucun historique disponible.</p>
                            </div>
                        }
                        else
                        {
                            <div class="relative border-l-2 border-gray-200 ml-3 space-y-6 pb-2">
                                @foreach (var item in HistoryList)
                                {
                                    <div class="relative pl-6">
                                        <div class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-white border-2 border-blue-500"></div>

                                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 hover:shadow-sm transition-shadow group space-y-3">

                                            <div class="flex justify-between items-start border-b border-gray-200 pb-2">
                                                <span class="font-bold text-gray-700 text-sm">Modification</span>
                                                <span class="text-xs text-gray-400">@item.DateUpdate.ToLocalTime().ToString("g")</span>
                                            </div>

                                            <div class="grid grid-cols-1 gap-3 text-sm">

                                                <div>
                                                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Titre</label>
                                                    <div class="text-gray-800 font-medium">@item.Libelle</div>
                                                </div>

                                                @if (!string.IsNullOrEmpty(item.Username))
                                                {
                                                    <div>
                                                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Identifiant</label>
                                                        <div class="text-gray-800 font-mono text-xs bg-white border border-gray-200 px-2 py-1 rounded inline-block">
                                                            @item.Username
                                                        </div>
                                                    </div>
                                                }

                                                <div>
                                                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Mot de passe</label>
                                                    <div class="relative">
                                                        <input type="@GetHistoryInputType(item)"
                                                               value="@item.Password"
                                                               readonly
                                                               class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm pr-10 focus:outline-none text-gray-600 font-mono" />

                                                        <button type="button"
                                                                @onclick="() => ToggleHistoryVisibility(item)"
                                                                class="absolute right-3 top-1/2 -translate-y-1/2 text-blue-400 hover:text-blue-600 transition-colors">
                                                            <i class="bi @(IsHistoryVisible(item) ? "bi-eye-slash-fill" : "bi-eye-fill")"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                @if (!string.IsNullOrEmpty(item.Url))
                                                {
                                                    <div>
                                                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">URL</label>
                                                        <a href="@item.Url" target="_blank" class="text-blue-600 hover:underline truncate block text-xs">
                                                            @item.Url
                                                        </a>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(item.Commentaire))
                                                {
                                                    <div>
                                                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Commentaire</label>
                                                        <p class="text-gray-600 text-xs italic bg-white p-2 rounded border border-gray-100">
                                                            @item.Commentaire
                                                        </p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EntryFormModel FormModel { get; set; } = new();

    [Parameter] public List<EntryFormModel> HistoryList { get; set; }

    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public string ErrorMessage { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }

    private string _activeTab = "edit"; 
    private string _passwordFieldType = "password";

    protected override void OnParametersSet()
    {
        if (!IsVisible)
        {
            _activeTab = "edit";
        }
    }

    private void TogglePasswordVisibility()
    {
        _passwordFieldType = _passwordFieldType == "password" ? "text" : "password";
    }

    private void HandlePasswordGenerated(string newPassword)
    {
        FormModel.Password = newPassword;
        StateHasChanged();
    }

    private HashSet<EntryFormModel> _revealedHistoryItems = new();

    private bool IsHistoryVisible(EntryFormModel item) => _revealedHistoryItems.Contains(item);

    private string GetHistoryInputType(EntryFormModel item) => IsHistoryVisible(item) ? "text" : "password";

    private void ToggleHistoryVisibility(EntryFormModel item)
    {
        if (_revealedHistoryItems.Contains(item))
        {
            _revealedHistoryItems.Remove(item);
        }
        else
        {
            _revealedHistoryItems.Add(item);
        }
        StateHasChanged();
    }
}