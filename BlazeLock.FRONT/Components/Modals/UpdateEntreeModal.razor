@using BlazeLock.DbLib
@using BlazeLock.FRONT.ViewModels
@using BlazeLock.FRONT.Components.Forms
@using BlazeLock.FRONT.Components.Layouts
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-lg overflow-hidden animate-fade-in-up flex flex-col max-h-[90vh]">

            <div class="px-8 pt-6 pb-0 border-b border-gray-100 bg-white sticky top-0 z-10">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xl font-bold text-gray-800">Détails de l'Entrée</h3>
                    <button @onclick="OnClose" class="text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="flex gap-6">
                    <button @onclick='() => _activeTab = "edit"' class="@GetTabClass("edit")">
                        <i class="bi bi-pencil-square mr-2"></i>Modification
                    </button>
                    <button @onclick='() => _activeTab = "history"' class="@GetTabClass("history")">
                        <i class="bi bi-clock-history mr-2"></i>Historique
                    </button>
                </div>
            </div>

            <div class="overflow-y-auto flex-1 p-8">

                @if (_activeTab == "edit")
                {
                    <EditForm Model="@FormModel" OnValidSubmit="OnSubmit">
                        <DataAnnotationsValidator />
                        <div class="space-y-4">

                            <div>
                                <label class="block text-sm font-bold text-gray-700 mb-2">Titre</label>
                                <InputText @bind-Value="FormModel.Libelle" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-100 outline-none" />
                                <ValidationMessage For="@(() => FormModel.Libelle)" class="text-red-500 text-xs" />
                            </div>

                            <div class="p-4 bg-blue-50 rounded-xl border border-blue-100 space-y-3">
                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Identifiant</label>
                                    <InputText @bind-Value="FormModel.Username" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm outline-none" />
                                </div>

                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Mot de passe</label>
                                    <div class="relative">
                                        <input type="@_passwordFieldType"
                                                   @bind="FormModel.Password"
                                                   @bind:event="oninput" 
                                                   placeholder="••••••••"
                                                   class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm pr-24 focus:ring-2 focus:ring-blue-100 outline-none" />

                                        <div class="absolute right-2 top-1/2 -translate-y-1/2 flex items-center gap-1">
                                            <button class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="HandleCopy"
                                                    title="Copier le mot de passe">
                                                <i class="bi bi-clipboard"></i>
                                            </button>
                                            <button type="button" @onclick="TogglePasswordVisibility" class="p-1.5 text-blue-400 hover:text-blue-600 hover:bg-blue-50 rounded-md"><i class="bi @(_passwordFieldType == "password" ? "bi-eye-fill" : "bi-eye-slash-fill")"></i></button>
                                        </div>
                                    </div>

                                    <PasswordStrengthMeter Password="@FormModel.Password" />

                                    <ValidationMessage For="@(() => FormModel.Password)" class="text-red-500 text-xs" />

                                    <PasswordGenerator OnPasswordGenerated="HandlePasswordGenerated" />
                                </div>

                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">URL</label>
                                    <InputText @bind-Value="FormModel.Url" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm outline-none" />
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-blue-800 mb-1 uppercase">Commentaire</label>
                                    <InputTextArea @bind-Value="FormModel.Commentaire" class="w-full px-3 py-2 bg-white border border-blue-200 rounded-lg text-sm outline-none" rows="2" />
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(ErrorMessage))
                            {
                                <div class="text-red-500 text-sm bg-red-50 p-3 rounded-lg flex items-center gap-2"><i class="bi bi-exclamation-circle-fill"></i> @ErrorMessage</div>
                            }
                        </div>

                        <div class="mt-8 flex justify-end gap-3">
                            <button type="button" @onclick="OnClose" class="px-6 py-2.5 rounded-xl font-semibold text-gray-600 hover:bg-gray-200">Annuler</button>
                            <button type="submit" disabled="@IsProcessing" class="px-6 py-2.5 rounded-xl font-bold text-white bg-blue-600 hover:bg-blue-700 shadow-lg disabled:opacity-50">
                                @(IsProcessing ? "Sauvegarde..." : "Enregistrer")
                            </button>
                        </div>
                    </EditForm>
                }

                @if (_activeTab == "history")
                {
                    <div class="space-y-4">
                        @if (HistoryList == null || !HistoryList.Any())
                        {
                            <div class="text-center py-10 text-gray-400">
                                <i class="bi bi-clock-history text-4xl mb-2 block"></i>
                                <p class="text-sm">Aucun historique disponible.</p>
                            </div>
                        }
                        else
                        {
                            <div class="relative border-l-2 border-gray-200 ml-3 space-y-6 pb-2">
                                @foreach (var item in HistoryList)
                                {
                                    <HistoryEntryCard Item="@item" />
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EntryFormModel FormModel { get; set; } = new();
    [Parameter] public List<EntryFormModel> HistoryList { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public string ErrorMessage { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback<EntryFormModel> OnCopyPassword { get; set; }

    private string _activeTab = "edit";
    private string _passwordFieldType = "password";


    protected override void OnParametersSet()
    {
        if (!IsVisible) _activeTab = "edit";
    }

    private void TogglePasswordVisibility() => _passwordFieldType = _passwordFieldType == "password" ? "text" : "password";

    private void HandlePasswordGenerated(string newPassword)
    {
        FormModel.Password = newPassword;
        StateHasChanged();
    }
    private async Task HandleCopy()
    {
        if (OnCopyPassword.HasDelegate)
        {
            await OnCopyPassword.InvokeAsync(FormModel);
        }
    }

    private string GetTabClass(string tabName)
    {
        return $"pb-3 text-sm font-bold border-b-2 transition-all {(_activeTab == tabName ? "text-blue-600 border-blue-600" : "text-gray-400 border-transparent hover:text-gray-600")}";
    }
}