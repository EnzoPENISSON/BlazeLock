@page "/coffre/{Id:guid}"
@page "/coffre/{Id:guid}/{FolderId:guid}"
@attribute [Authorize]
@using BlazeLock.DbLib;
@using BlazeLock.FRONT.Services
@using BlazeLock.FRONT.ViewModels
@using BlazeLock.FRONT.Components.Types
@using BlazeLock.FRONT.Components.Modals
@inject CoffreDetailViewModel ViewModel
@inject NavigationManager Nav

<PageTitle>@ViewModel.VaultName - BlazeLock</PageTitle>

<div class="min-h-screen bg-gray-50 flex flex-col items-center p-6 font-sans">

    @if (!ViewModel.HasAccess)
    {
        <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden mt-10">
            <div class="bg-red-500 p-8 text-center">
                <div class="bg-white/20 w-20 h-20 rounded-full flex items-center justify-center mx-auto backdrop-blur-sm">
                    <i class="bi bi-lock-fill text-4xl text-white"></i>
                </div>
            </div>
            <div class="p-8 text-center">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Accès Refusé</h2>
                <p class="text-gray-500 mb-8">Ce coffre est verrouillé ou votre session a expiré.</p>
                <button class="w-full bg-gray-900 hover:bg-black text-white font-bold py-3 px-6 rounded-xl transition-all duration-200"
                        @onclick='() => Nav.NavigateTo("/")'>
                    Retour à l'accueil
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="w-full max-w-7xl">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
                <div class="flex items-center gap-4">
                    <button class="bg-white hover:bg-gray-100 text-gray-600 p-3 rounded-xl shadow-sm border border-gray-200 transition-all"
                            @onclick='() => Nav.NavigateTo("/")'>
                        <i class="bi bi-arrow-left text-lg"></i>
                    </button>
                    <div>
                        <div class="flex items-center gap-3">
                            <h1 class="text-3xl font-extrabold text-gray-900">@ViewModel.VaultName</h1>
                            <span class="bg-green-100 text-green-700 text-xs font-bold px-3 py-1 rounded-full border border-green-200 flex items-center">
                                <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
                                Déchiffré
                            </span>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3">
                    <button @onclick='() => Nav.NavigateTo($"/coffre/{Id}/logs")' class="bg-white hover:bg-gray-50 text-gray-700 font-semibold py-2.5 px-5 rounded-xl border border-gray-200 shadow-sm transition-all flex items-center">
                        <i class="bi bi-shield-shaded mr-2 text-gray-400"></i> Administration
                    </button>

                    <button @onclick="ViewModel.OpenEntryModal" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2.5 px-6 rounded-xl shadow-lg hover:shadow-blue-500/30 transition-all flex items-center">
                        <i class="bi bi-plus-lg mr-2"></i> Nouvelle Entrée
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                <div class="lg:col-span-1 space-y-4">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4">
                        <div class="relative mb-4">
                            <i class="bi bi-search absolute left-3 top-3.5 text-gray-400"></i>
                            <input type="text" placeholder="Rechercher..." class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-100 rounded-xl focus:bg-white focus:ring-2 focus:ring-blue-100 outline-none transition-all text-sm font-medium">
                        </div>
                        @if (ViewModel.IsFoldersLoading)
                        {
                            <div class="flex flex-col justify-center items-center py-10">
                                <div class="animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-blue-600"></div>
                            </div>
                        }
                        else
                        {
                            <nav class="space-y-1 relative">

                                @if (FolderId == Guid.Empty || FolderId == null)
                                {
                                    <a @onclick='() => Nav.NavigateTo("/coffre/" + ViewModel.VaultId)'
                                       class="cursor-pointer flex items-center px-4 py-3 bg-blue-50 text-blue-700 rounded-xl font-bold text-sm transition-all shadow-sm">
                                        <i class="bi bi-collection-fill mr-3 text-lg"></i>
                                        <span>Tous les éléments</span>
                                    </a>
                                }
                                else
                                {
                                    <a @onclick='() => Nav.NavigateTo("/coffre/" + ViewModel.VaultId)'
                                       class="cursor-pointer flex items-center px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-xl font-medium text-sm transition-colors">
                                        <i class="bi bi-collection mr-3 text-lg"></i>
                                        <span>Tous les éléments</span>
                                    </a>
                                }

                                <div class="my-2 border-t border-gray-100 mx-2"></div>

                                @foreach (var fold in ViewModel.Folders)
                                {
                                    @if (fold.IdDossier != ViewModel.DefaultFolderId)
                                    {
                                        var isActive = fold.IdDossier == FolderId;
                                        var containerClass = isActive
                                        ? "bg-blue-50 text-blue-700 font-bold shadow-sm"
                                        : "text-gray-600 hover:bg-gray-50 font-medium hover:text-gray-900";

                                        var iconClass = isActive
                                        ? "bi-folder-fill text-blue-600"
                                        : "bi-folder text-yellow-500";

                                        <div class="@containerClass group relative flex items-center justify-between rounded-xl transition-all pr-2 cursor-pointer"
                                             @onclick='() => Nav.NavigateTo("/coffre/" + ViewModel.VaultId + "/" + fold.IdDossier)'>

                                            <div class="flex items-center px-4 py-3 overflow-hidden">
                                                <i class="bi @iconClass mr-3 text-lg flex-shrink-0"></i>
                                                <span class="truncate text-sm">@fold.Libelle</span>
                                            </div>

                                            <button class="p-1.5 rounded-lg text-gray-400 hover:text-gray-700 hover:bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity focus:opacity-100"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => ToggleMenu(fold.IdDossier)">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>

                                            @if (_activeMenuFolderId == fold.IdDossier)
                                            {
                                                <div class="absolute right-0 top-10 z-50 w-48 bg-white rounded-xl shadow-xl border border-gray-100 overflow-hidden animate-fade-in-up"
                                                     @onclick:stopPropagation="true">

                                                    <button @onclick="() => HandleRename(fold)"
                                                            class="w-full text-left px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 flex items-center gap-2 transition-colors">
                                                        <i class="bi bi-pencil text-gray-400"></i> Renommer
                                                    </button>

                                                    <button @onclick="() => HandleDeleteFolder(fold)"
                                                            class="w-full text-left px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 flex items-center gap-2 transition-colors border-t border-gray-50">
                                                        <i class="bi bi-trash"></i> Supprimer
                                                    </button>
                                                </div>

                                                <div class="fixed inset-0 z-40 cursor-default"
                                                     @onclick="CloseMenu"
                                                     @onclick:stopPropagation="true"></div>
                                            }
                                        </div>
                                    }
                                }

                                <button @onclick="ViewModel.OpenFolderModal"
                                        class="mt-4 w-full flex items-center justify-center gap-2 px-4 py-3 rounded-xl border-2 border-dashed border-gray-300 text-gray-500 font-semibold text-sm hover:border-blue-500 hover:text-blue-600 hover:bg-blue-50 transition-all group">
                                    <div class="w-6 h-6 rounded-lg bg-gray-100 group-hover:bg-blue-200 group-hover:text-blue-700 flex items-center justify-center transition-colors">
                                        <i class="bi bi-plus text-lg"></i>
                                    </div>
                                    <span>Nouveau dossier</span>
                                </button>
                            </nav>
                        }
                    </div>
                </div>

                <div class="lg:col-span-3">
                    @if (ViewModel.IsLoading && ViewModel.IsFoldersLoading)
                    {
                        <div class="flex flex-col justify-center items-center py-20">
                            <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-600"></div>
                        </div>
                    }
                    else if (ViewModel.Entries.Count == 0)
                    {
                        <div class="bg-white rounded-3xl shadow-sm border border-gray-100 min-h-[400px] flex flex-col items-center justify-center text-center p-8">
                            <div class="bg-gray-50 p-6 rounded-full mb-4">
                                <i class="bi bi-layers text-4xl text-gray-300"></i>
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">C'est vide ici !</h3>
                            <p class="text-gray-500 max-w-sm mb-6">Ajoutez votre premier mot de passe.</p>

                            <button @onclick="ViewModel.OpenEntryModal" class="bg-blue-50 hover:bg-blue-100 text-blue-600 font-bold py-3 px-6 rounded-xl transition-colors">
                                Créer une entrée
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="grid grid-cols-1 gap-4">
                            @foreach (var entry in ViewModel.Entries)
                            {
                                <EntreeCard Entry="@entry" Folders="@ViewModel.Folders"
                                OnClick="@(() => ViewModel.OpenEditEntryModal(entry))"
                                OnMoveClick="@(() => ViewModel.OpenMoveEntryModal(entry))" 
                                DeleteOnclick="@(() => ViewModel.OpenDeleteEntryModal(entry))"
                                OnCopyPassword="@ViewModel.CopyPasswordAsync" />
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<UpdateEntreeModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.UpdateEntry)"
                   FormModel="@ViewModel.NewEntryForm"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnSubmit="@ViewModel.SaveEntryAsync" />

<CreateEntreeModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.CreateEntry)"
                   FormModel="@ViewModel.NewEntryForm"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnSubmit="@ViewModel.SaveEntryAsync" />

<CreateFolderModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.CreateFolder)"
                   FormModel="@ViewModel.NewFolderForm"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnSubmit="@ViewModel.CreateFolderAsync" />

<UpdateFolderModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.UpdateFolder)"
                   FormModel="@ViewModel.NewFolderForm"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnSubmit="@ViewModel.UpdateFolderAsync" />

<DeleteFolderModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.DeleteFolder)"
                   FolderName="@ViewModel.CurrentFolderName"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnConfirm="@ViewModel.DeleteFolderAsync" />

<MoveEntryModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.MoveEntry)"
                Folders="@ViewModel.Folders"
                IsProcessing="@ViewModel.IsProcessing"
                EntreeId="@ViewModel._currentEntryId"
                ErrorMessage="@ViewModel.ErrorMessage"
                OnClose="@ViewModel.CloseModal"
                DefaultFolderId="@ViewModel.DefaultFolderId"
                OnSubmit="@(args => ViewModel.MoveEntryToFolderAsync(args.FolderId, args.EntreeId))" />

<DeleteEntreeModal IsVisible="@(ViewModel.CurrentModal == CoffreModalType.DeleteEntry)"
                   EntryTitle="@ViewModel.CurrentEntryTitle"
                   IsProcessing="@ViewModel.IsProcessing"
                   ErrorMessage="@ViewModel.ErrorMessage"
                   OnClose="@ViewModel.CloseModal"
                   OnConfirm="@ViewModel.DeleteEntryAsync" />

@code {
    [Parameter] public Guid Id { get; set; }
    [Parameter] public Guid? FolderId { get; set; }

    private Guid? _activeMenuFolderId;

    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync(Id,FolderId);
        StateHasChanged();
    }

    protected override async Task OnParametersSetAsync()
    {
        await ViewModel.ReloadEntrieesAsync(FolderId);
        StateHasChanged();
    }

    private void ToggleMenu(Guid folderId)
    {
        if (_activeMenuFolderId == folderId)
            _activeMenuFolderId = null;
        else
            _activeMenuFolderId = folderId;
    }

    private void CloseMenu()
    {
        _activeMenuFolderId = null;
    }

    private async Task HandleRename(DossierDto fold)
    {
        CloseMenu();
        ViewModel.OpenUpdateFolderModal(fold);
    }

    private async Task HandleDeleteFolder(DossierDto fold)
    {
        CloseMenu();
        ViewModel.OpenDeleteFolderModal(fold);
    }

}