@page "/coffre/{Id:guid}/admin"
@attribute [Authorize]
@using BlazeLock.DbLib
@using BlazeLock.FRONT.Services
@using BlazeLock.FRONT.Components.Modals
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager Nav
@inject ILogAPIService LogService
@inject IUserAPIService UserService
@inject IPartageAPIService PartageService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Administration du Coffre - BlazeLock</PageTitle>

<div class="min-h-screen bg-gray-50 flex flex-col items-center p-6 font-sans">
    <div class="w-full max-w-7xl">
        <div class="flex items-center gap-4 mb-8">
            <button class="bg-white hover:bg-gray-100 text-gray-600 p-3 rounded-xl shadow-sm border border-gray-200 transition-all"
                    @onclick='() => Nav.NavigateTo($"/coffre/{Id}")'>
                <i class="bi bi-arrow-left text-lg"></i>
            </button>
            <div>
                <h1 class="text-3xl font-extrabold text-gray-900">Administration du Coffre</h1>
            </div>
        </div>

        <!-- Section Partage -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Partager le coffre</h2>
            <p class="text-gray-500 mb-4 text-sm">Recherchez un utilisateur par son email pour lui donner accès à ce coffre.</p>

            @if (!string.IsNullOrEmpty(_shareSuccessMessage))
            {
                <div class="bg-green-50 border border-green-200 text-green-800 text-sm rounded-lg p-3 mb-4 max-w-md">
                    @_shareSuccessMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(_shareErrorMessage))
            {
                <div class="bg-red-50 border border-red-200 text-red-800 text-sm rounded-lg p-3 mb-4 max-w-md">
                    @_shareErrorMessage
                </div>
            }

            <div class="relative max-w-md">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                    <input type="text"
                           class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                           placeholder="Email de l'utilisateur..."
                           @oninput="OnSearchInput"
                           value="@_searchTerm" />
                </div>

                @if (_isSearching)
                {
                    <div class="absolute z-10 mt-1 w-full bg-white shadow-lg rounded-md border border-gray-200 py-2">
                        <div class="px-4 py-2 text-sm text-gray-500 flex items-center gap-2">
                            <div class="animate-spin rounded-full h-4 w-4 border-t-2 border-b-2 border-blue-600"></div>
                            Recherche...
                        </div>
                    </div>
                }
                else if (_searchResults.Any())
                {
                    <div class="absolute z-10 mt-1 w-full bg-white shadow-lg rounded-md border border-gray-200 max-h-60 overflow-auto">
                        <ul class="divide-y divide-gray-100">
                            @foreach (var user in _searchResults)
                            {
                                <li class="px-4 py-2 hover:bg-gray-50 cursor-pointer flex justify-between items-center" @onclick="() => SelectUser(user)">
                                    <span class="text-sm text-gray-900">@user.email</span>
                                    <i class="bi bi-plus-circle text-blue-500"></i>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>

            @if (_selectedUser != null)
            {
                <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-100 flex flex-col gap-4 max-w-md">
                    <div class="flex justify-between items-center w-full">
                        <div class="flex items-center gap-3">
                            <div class="bg-blue-100 p-2 rounded-full">
                                <i class="bi bi-person text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-blue-900">Utilisateur sélectionné</p>
                                <p class="text-sm text-blue-700">@_selectedUser.email</p>
                            </div>
                        </div>
                        <button @onclick="ClearSelectedUser" class="text-blue-400 hover:text-blue-600 p-1">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    <div class="w-full border-t border-blue-100 pt-4 flex justify-between items-center">
                        <div class="flex items-center gap-2">
                            <input type="checkbox" id="isAdmin" @bind="_isShareAdmin" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                            <label for="isAdmin" class="text-sm text-gray-700">Donner les droits d'administrateur</label>
                        </div>
                        <button @onclick="HandleShareAsync" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg text-sm transition-all">
                            Partager
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Section Utilisateurs Ayant Accès -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Utilisateurs ayant accès</h2>
            @if (_partages.Any())
            {
                <ul class="divide-y divide-gray-200">
                    @foreach (var partage in _partages)
                    {
                        <li class="py-3 flex justify-between items-center">
                            <div>
                                <p class="text-sm font-medium text-gray-900">@partage.Email</p>
                                <p class="text-sm text-gray-500">@(partage.IsAdmin ? "Administrateur" : "Membre")</p>
                            </div>
                            <button @onclick="() => ShowDeleteModal(partage)" class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors">
                                <i class="bi bi-trash"></i>
                            </button>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-gray-500 text-sm">Ce coffre n'est partagé avec aucun autre utilisateur.</p>
            }
        </div>


        <!-- Section Logs -->
        <div class="mb-4">
            <h2 class="text-xl font-bold text-gray-900">Historique d'activité</h2>
        </div>

        @if (_isLoading)
        {
            <div class="flex justify-center items-center py-20">
                <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-600"></div>
            </div>
        }
        else if (_pagedResult == null || !_pagedResult.Items.Any())
        {
            <div class="text-center py-20 bg-white rounded-2xl shadow-sm border border-gray-100">
                <i class="bi bi-card-checklist text-5xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-bold text-gray-700">Aucun log trouvé</h3>
                <p class="text-gray-500">Il n'y a pas encore d'activité enregistrée pour ce coffre.</p>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilisateur</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var log in _pagedResult.Items)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@log.Timestamp.ToString("g")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@log.Texte</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@log.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="flex items-center justify-between mt-4">
                <div>
                    <p class="text-sm text-gray-700">
                        Page @(_pagedResult.PageNumber) sur @(_pagedResult.TotalPages)
                    </p>
                </div>
                <div class="flex gap-2">
                    <button @onclick="() => ChangePage(_pagedResult.PageNumber - 1)" disabled="@(_pagedResult.PageNumber <= 1)"
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                        Précédent
                    </button>
                    <button @onclick="() => ChangePage(_pagedResult.PageNumber + 1)" disabled="@(_pagedResult.PageNumber >= _pagedResult.TotalPages)"
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                        Suivant
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<DeleteShareModal IsVisible="_isDeleteModalVisible"
                  UserEmail="@(_partageToDelete?.Email)"
                  IsProcessing="_isProcessing"
                  ErrorMessage="@_shareErrorMessage"
                  OnClose="HideDeleteModal"
                  OnConfirm="ConfirmDeleteShareAsync" />

@code {
    [Parameter]
    public Guid Id { get; set; }

    // Logs variables
    private PagedResultDto<LogDto>? _pagedResult;
    private bool _isLoading = true;
    private int _currentPage = 1;
    private int _pageSize = 10;

    // Search and Share variables
    private string _searchTerm = "";
    private List<UtilisateurDto> _searchResults = new();
    private bool _isSearching = false;
    private UtilisateurDto? _selectedUser;
    private bool _isShareAdmin = false;
    private string? _shareSuccessMessage;
    private string? _shareErrorMessage;
    private List<PartageDto?> _partages = new();
    private string? _currentUserEmail;

    // Modal state
    private bool _isDeleteModalVisible = false;
    private PartageDto? _partageToDelete;
    private bool _isProcessing = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _currentUserEmail = authState.User.Identity?.Name;

        try 
        {
           await LoadPartages();
           await LoadLogs();
        }
        catch(Exception)
        {
             Nav.NavigateTo($"/coffre/{Id}");
        }
    }

    private async Task LoadPartages()
    {
        try
        {
            _partages = await PartageService.GetPartagesByCoffreIdAsync(Id);
        }
        catch (Exception ex)
        {
            _shareErrorMessage = "Erreur lors de la récupération des partages ou accès refusé.";
            Console.WriteLine($"Error fetching partages: {ex.Message}");
            throw; 
        }
    }

    private async Task LoadLogs()
    {
        _isLoading = true;
        try
        {
            _pagedResult = await LogService.GetLogsByVaultIdAsync(Id, _currentPage, _pageSize);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching logs: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ChangePage(int pageNumber)
    {
        if (pageNumber < 1 || (_pagedResult != null && pageNumber > _pagedResult.TotalPages))
        {
            return;
        }
        _currentPage = pageNumber;
        await LoadLogs();
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        _searchTerm = e.Value?.ToString() ?? "";
        _shareSuccessMessage = null;
        _shareErrorMessage = null;

        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            _searchResults.Clear();
            return;
        }

        _isSearching = true;
        try
        {
            var results = await UserService.SearchUtilisateursAsync(_searchTerm);
            
            // Filter out current user from results
            if (!string.IsNullOrEmpty(_currentUserEmail))
            {
                _searchResults = results
                    .Where(u => !string.Equals(u.email, _currentUserEmail, StringComparison.OrdinalIgnoreCase))
                    .ToList();
            }
            else 
            {
                _searchResults = results;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search error: {ex.Message}");
            _shareErrorMessage = "Erreur lors de la recherche.";
        }
        finally
        {
            _isSearching = false;
        }
    }

    private void SelectUser(UtilisateurDto user)
    {
        _selectedUser = user;
        _searchTerm = "";
        _searchResults.Clear();
    }

    private void ClearSelectedUser()
    {
        _selectedUser = null;
        _isShareAdmin = false;
        _shareSuccessMessage = null;
        _shareErrorMessage = null;
    }

    private async Task HandleShareAsync()
    {
        if (_selectedUser == null)
        {
            _shareErrorMessage = "Veuillez sélectionner un utilisateur.";
            return;
        }

        _shareSuccessMessage = null;
        _shareErrorMessage = null;
        _isProcessing = true;

        try
        {
            var partageDto = new PartageDto
                {
                    IdCoffre = Id,
                    IdUtilisateur = _selectedUser.IdUtilisateur,
                    IsAdmin = _isShareAdmin
                };

            await PartageService.AddPartageAsync(partageDto);
            _shareSuccessMessage = $"Le coffre a été partagé avec {_selectedUser.email}.";
            ClearSelectedUser();
            await LoadPartages(); // Recharger la liste des partages
        }
        catch (Exception ex)
        {
            _shareErrorMessage = $"Erreur lors du partage : {ex.Message}";
            Console.WriteLine($"Share error: {ex.Message}");
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private void ShowDeleteModal(PartageDto partage)
    {
        _partageToDelete = partage;
        _isDeleteModalVisible = true;
        _shareSuccessMessage = null;
        _shareErrorMessage = null;
    }

    private void HideDeleteModal()
    {
        _isDeleteModalVisible = false;
        _partageToDelete = null;
        _isProcessing = false;
        _shareErrorMessage = null;
    }

    private async Task ConfirmDeleteShareAsync()
    {
        if (_partageToDelete == null) return;

        _isProcessing = true;
        _shareErrorMessage = null;

        try
        {
            await PartageService.DeletePartageAsync(_partageToDelete);
            _shareSuccessMessage = $"L'accès pour {_partageToDelete.Email} a été révoqué.";
            await LoadPartages(); // Recharger la liste
        }
        catch (Exception ex)
        {
            _shareErrorMessage = $"Erreur lors de la suppression du partage : {ex.Message}";
            Console.WriteLine($"Delete share error: {ex.Message}");
        }
        finally
        {
            HideDeleteModal();
        }
    }
}